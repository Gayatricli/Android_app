<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_chat_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <!-- BACKGROUND DECORATIVE LAYER -->

        <!-- Gradient Blobs -->
        <ImageView
            android:id="@+id/decorBlobPurple"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/ic_blob_purple"
            android:alpha="0.20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/decorCirclesTop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_circles_group"
            android:alpha="0.25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/decorFlowerLeft"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/ic_flower_shape"
            android:alpha="0.20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp"
            android:contentDescription="@null" />

        <!-- Pink Hearts Background Layer -->
        <TextView
            android:id="@+id/decorHeart1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’—"
            android:textSize="40sp"
            android:alpha="0.40"
            android:rotation="-15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="48dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/decorHeart2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’—"
            android:textSize="32sp"
            android:alpha="0.35"
            android:rotation="20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="400dp"
            android:layout_marginStart="48dp"
            tools:ignore="HardcodedText" />

        <!-- Leaf Decorations -->
        <TextView
            android:id="@+id/decorLeaf1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸƒ"
            android:textSize="28sp"
            android:alpha="0.35"
            android:rotation="-20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/decorLeaf2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸƒ"
            android:textSize="24sp"
            android:alpha="0.40"
            android:rotation="25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="32dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/decorLeaf3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸƒ"
            android:textSize="26sp"
            android:alpha="0.38"
            android:rotation="-35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="500dp"
            android:layout_marginStart="20dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/decorLeaf4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸƒ"
            android:textSize="30sp"
            android:alpha="0.35"
            android:rotation="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="8dp"
            tools:ignore="HardcodedText" />

        <!-- CONTENT LAYER -->

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F2FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFF7ED">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_chevron_left"
                        android:contentDescription="@string/back_button"
                        app:tint="@color/orange_gradient_start" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mood Leaderboard"
                        android:textColor="#1E293B"
                        android:textSize="24sp"
                        android:fontFamily="@font/permanent_marker"
                        android:shadowColor="#40000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Community Rankings"
                        android:textColor="#64748B"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFF7ED">

                    <ImageButton
                        android:id="@+id/btnRefresh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_refresh"
                        android:contentDescription="Refresh"
                        app:tint="@color/orange_gradient_start" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Trophy Emoji Header -->
        <TextView
            android:id="@+id/trophyEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ†"
            android:textSize="72sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText" />

        <!-- Title Section -->
        <LinearLayout
            android:id="@+id/titleContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/trophyEmoji"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvLeaderboardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Mood Trackers"
                android:textSize="28sp"
                android:textColor="#1E293B"
                android:fontFamily="@font/permanent_marker"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Champions"
                android:textSize="12sp"
                android:textColor="#7C3AED"
                android:textStyle="bold"
                android:background="@drawable/bg_celebration_badge"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Stats Summary Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/statsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F2FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/titleContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Total Users -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¥"
                        android:textSize="32sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tvTotalUsers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,234"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Participants"
                        android:textSize="11sp"
                        android:textColor="#64748B" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E2E8F0"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <!-- Your Rank -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­"
                        android:textSize="32sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tvYourRank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#42"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#7C3AED"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Rank"
                        android:textSize="11sp"
                        android:textColor="#64748B" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E2E8F0"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <!-- Your Logs -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“"
                        android:textSize="32sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tvYourLogs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#059669"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Logs"
                        android:textSize="11sp"
                        android:textColor="#64748B" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Leaderboard Section Header -->
        <LinearLayout
            android:id="@+id/leaderboardHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/statsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯"
                android:textSize="24sp"
                android:layout_marginEnd="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rankings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1E293B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated Just Now"
                android:textSize="11sp"
                android:textColor="#64748B"
                android:background="@drawable/bg_number_badge"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- RecyclerView Container Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/leaderboardCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F2FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/leaderboardHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/motivationCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerLeaderboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="400dp"
                    android:padding="8dp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_leaderboard"
                    tools:itemCount="10" />

                <!-- Empty State (hidden when data available) -->
                <LinearLayout
                    android:id="@+id/emptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="40dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒŸ"
                        android:textSize="64sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Rankings Yet"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start logging your moods to see rankings!"
                        android:textSize="14sp"
                        android:textColor="#64748B"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Motivation Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/motivationCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#DBEAFE"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/leaderboardCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’ª"
                        android:textSize="28sp"
                        android:layout_marginEnd="8dp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keep Going!"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E40AF" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Every mood log helps you understand yourself better. Keep tracking to climb the leaderboard and support the community! ðŸŒŸ"
                    android:textColor="#1E40AF"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>